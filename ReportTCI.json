{
  "swagger": "2.0",
  "info": {
    "title": "TCI Report API",
    "description": "API for generating, processing, and downloading TCI report files.",
    "version": "1.0.0"
  },
  "host": "localhost:3005",
  "schemes": [
    "http"
  ],
  "paths": {
    "/getreporttci": {
      "get": {
        "summary": "Generate a TCI report",
        "description": "This endpoint generates a TCI report, processes it in the background, and adds a job to the queue.",
        "parameters": [
          {
            "name": "origin",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "Origin location for the TCI report."
          },
          {
            "name": "destination",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "Destination location for the TCI report."
          },
          {
            "name": "froms",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "Start date for the TCI report."
          },
          {
            "name": "thrus",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "End date for the TCI report."
          },
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "User ID requesting the report."
          },
          {
            "name": "TM",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "Transport Mode (TM) for the TCI report."
          }
        ],
        "responses": {
          "200": {
            "description": "Job added successfully, processing in the background.",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "message": {
                  "type": "string",
                  "example": "Job added successfully."
                },
                "jobId": {
                  "type": "string",
                  "example": "123456"
                },
                "estimatedDataCount": {
                  "type": "integer",
                  "example": 5000
                },
                "estimatedTimeMinutes": {
                  "type": "number",
                  "example": 10.5
                }
              }
            }
          },
          "400": {
            "description": "Missing required parameters."
          },
          "503": {
            "description": "Queue is full, please try again later."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/jobs": {
      "get": {
        "summary": "Get the list of jobs",
        "description": "This endpoint returns all jobs in the queue, including their status and progress.",
        "responses": {
          "200": {
            "description": "List of jobs in the queue.",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "tableHeaders": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "example": "ID"
                  }
                },
                "tableData": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "ID": {
                        "type": "string"
                      },
                      "UserID": {
                        "type": "string"
                      },
                      "Progress": {
                        "type": "string"
                      },
                      "Status": {
                        "type": "string"
                      },
                      "ErrorReason": {
                        "type": "string"
                      }
                    }
                  }
                },
                "totalJobs": {
                  "type": "integer",
                  "example": 10
                },
                "succeededJobs": {
                  "type": "integer",
                  "example": 5
                },
                "waitingJobs": {
                  "type": "integer",
                  "example": 3
                },
                "activeJobs": {
                  "type": "integer",
                  "example": 2
                }
              }
            }
          },
          "500": {
            "description": "Error fetching jobs."
          }
        }
      }
    },
    "/jobs/{id}": {
      "get": {
        "summary": "Get job details",
        "description": "This endpoint returns the details of a specific job by its ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Job ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Job details.",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "id": {
                  "type": "string",
                  "example": "123456"
                },
                "Origin": {
                  "type": "string",
                  "example": "NYC"
                },
                "Destination": {
                  "type": "string",
                  "example": "LAX"
                },
                "FromDate": {
                  "type": "string",
                  "example": "2025-01-01"
                },
                "ToDate": {
                  "type": "string",
                  "example": "2025-01-15"
                },
                "UserID": {
                  "type": "string",
                  "example": "user123"
                },
                "TM": {
                  "type": "string",
                  "example": "Air"
                },
                "Status": {
                  "type": "string",
                  "example": "Done"
                },
                "filenamezip": {
                  "type": "string",
                  "example": "TCIReport_123456.zip"
                },
                "errorMessage": {
                  "type": "string",
                  "example": "No errors"
                }
              }
            }
          },
          "404": {
            "description": "Job not found."
          },
          "500": {
            "description": "Error fetching job."
          }
        }
      }
    },
    "/download/{jobId}": {
      "get": {
        "summary": "Download report file",
        "description": "This endpoint allows you to download the generated report file for a specific job.",
        "parameters": [
          {
            "name": "jobId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Job ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Report file downloaded successfully."
          },
          "404": {
            "description": "File not found."
          },
          "500": {
            "description": "Error downloading the file."
          }
        }
      }
    }
  }
}
